<?xml version="1.0" encoding="UTF-8"?>

    <odoo>


<!-- inherits product template-->
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit.kickapp</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='detailed_type']" position="after">
                <field name="Prod" string="Produit Kickapp"/>
            </xpath>
        </field>
    </record>


 

    <menuitem id="menu_products" name="Produits" parent="menu_gestion" action="sale.product_template_action"/>



    </odoo>
    
        
    

    













  
